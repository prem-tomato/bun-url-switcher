{
  "name": "url-switcher-backend",
  "version": "1.0.0",
  "description": "Backend API for URL Switcher with CRUD operations using Neon PostgreSQL",
  "main": "server.ts",
  "scripts": {
    "dev": "bun run --watch server.ts",
    "start": "bun run server.ts",
    "build": "bun build server.ts --outdir ./dist --target bun",
    "vercel-build": "bun build server.ts --outdir ./dist --target bun",
    "clean": "rm -rf dist",
    "type-check": "bunx tsc --noEmit",
    "db:generate": "bunx drizzle-kit generate:pg",
    "db:migrate": "bun run db/migrate.ts",
    "db:studio": "bunx drizzle-kit studio"
  },
  "keywords": ["bun", "elysia", "postgresql", "neon", "drizzle", "api", "url-switcher"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "elysia": "^1.0.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.10.0",
    "drizzle-kit": "^0.20.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}